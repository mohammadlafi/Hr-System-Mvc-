@model RoleDto
@{
    ViewData["Title"] = "AddRoleUser";
    Layout = "~/Views/Shared/_MneuPage.cshtml";
}

<form method="post">

    <div class="mb-3">
        <h1>Create Role</h1>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter Your Name">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" asp-action="CrateRole">
            </div>
        </div>
    </div>
</form>


