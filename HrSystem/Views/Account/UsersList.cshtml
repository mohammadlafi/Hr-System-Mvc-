@model List<UserDto>
@{
    ViewData["Title"] = "UsersList";
    Layout = "~/Views/Shared/_MneuPage.cshtml";
}

<form method="post">
    <div class="mb-3">
        <h1>Users List</h1>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>RoleManger</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (UserDto item in Model)
                            {
                            <tr>
                            <td>@item.Name</td>
                            <td><input type="submit" value="Add Role" asp-action="GetUser" asp-route-id="@item.id"/></td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
        </form>


