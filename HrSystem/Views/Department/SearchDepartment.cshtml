@model List<DepartmentDto>
@{
    ViewData["Title"] = "SearchDepartment";
    Layout = "~/Views/Shared/_MneuPage.cshtml";
}


<form method="post">
    <div class="row mt-3">
        <div class="col-6">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input name="txtName" type="text" class="form-control" placeholder="Enter Department Name">
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Search Department" asp-action="SearchDept">
            </div>

            <div class="mb-3">
                <table class="table table-dark table-hover">
                    <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                         <th>
                            Description
                         </th>
                    </tr>
                  
                    </thead>
                    <tbody>
                        @foreach(DepartmentDto item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                            </tr>
                        } 
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</form>

