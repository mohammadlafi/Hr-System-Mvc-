@model VmUsersanRole
@{
    ViewData["Title"] = "UsersListWithRoleList";
    Layout = "~/Views/Shared/_MneuPage.cshtml";
}


<form method="post">
    <div class="mb-3">
        <h1>Users List</h1>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="mb-3">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Role Manger</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input asp-for="userDto.Name" type="text" readonly class="form-control">
                                    <input type="hidden" readonly asp-for="userDto.id"/>
                                </div>
                            </div>
                        </tr>
                      
                           @for (int i = 0; i < Model.listroledto.Count(); i++)
                            {
                            <tr>
                              <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="@Model.listroledto[i].IsSelcted">
                                        <input type="hidden" readonly asp-for="@Model.listroledto[i].Name">
                                        <input type="hidden" readonly asp-for="@Model.listroledto[i].id">
                                        <label class="form-check-label" for="flexCheckDefault" >
                                            @Model.listroledto[i].Name                                        
                                            </label>
                                    </div>
                                </td>
                            </tr>
                            }
                       
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-12">
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" asp-action="Update">
            </div>
        </div>
    </div>
</form>

