@using HrSystem.Data;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager; 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_MneuPage</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    
</head>
<body>
    
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Dare Academy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if(signInManager.IsSignedIn(User))
                    {

                        <li class="nav-item">
                            <a class="nav-link"  asp-action="Index" asp-controller="Country">New Country</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="City">New City</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Department">New Department</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="indexSerch" asp-controller="Country">Search City</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AllCountry" asp-controller="Country">List Country</a>
                        </li>
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Employee">New Employee</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="IndexSearchEmp" asp-controller="Employee">Search Employee</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CrateAccount" asp-controller="Account">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="AddRoleUser" asp-controller="Account">Add Role</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" asp-action="UsersList" asp-controller="Account">Users List</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-action="LogOut" asp-controller="Account">LogOut</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
           
    </nav>
           
    <div class="container mt-5">
     <div class="row">
        <div class="col-12">
            @RenderBody()
        </div>
     </div>
    </div>
</body>
</html>
